<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="businessLogic.controller.ConvoyDetailsController">
    <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Dettagli Convoglio e Corsa" />
    <GridPane hgap="10" vgap="10">
        <Label text="ID Convoglio:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label fx:id="convoyIdLabel" GridPane.columnIndex="2" />
        <Label text="Linea:" GridPane.columnIndex="2" />
        <Label fx:id="lineNameLabel" GridPane.columnIndex="4" />
        <Label text="Stazione di partenza:" GridPane.rowIndex="3" />
        <Label fx:id="departureStationLabel" GridPane.columnIndex="4" GridPane.rowIndex="3" />
        <Label text="Orario di partenza:" GridPane.rowIndex="4" />
        <Label fx:id="departureTimeLabel" GridPane.columnIndex="4" GridPane.rowIndex="4" />
        <Label text="Stazione di arrivo:" GridPane.rowIndex="5" />
        <Label fx:id="arrivalStationLabel" GridPane.columnIndex="4" GridPane.rowIndex="5" />
        <Label text="Orario di arrivo:" GridPane.rowIndex="6" />
        <Label fx:id="arrivalTimeLabel" GridPane.columnIndex="4" GridPane.rowIndex="6" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>
    <Label style="-fx-font-size: 15px; -fx-font-weight: bold;" text="Carrozze del convoglio:" />
    <TableView fx:id="carriageTable" prefHeight="200" prefWidth="700">
        <columns>
            <TableColumn fx:id="carriageIdColumn" prefWidth="60" reorderable="false" text="ID" />
            <TableColumn fx:id="carriageModelColumn" prefWidth="120" reorderable="false" text="Modello" />
            <TableColumn fx:id="carriageTypeColumn" prefWidth="120" reorderable="false" text="Tipo Modello" />
            <TableColumn fx:id="carriageYearColumn" reorderable="false" text="Anno" />
            <TableColumn fx:id="carriageCapacityColumn" reorderable="false" text="CapacitÃ " />
        </columns>
    </TableView>
</VBox>
